
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if( Model.Count == 0 )
{
  <p>No movies found.</p>
}

<table class="table table-bordered table-hover">
  <tr><th>Movie</th></tr>
  @foreach( var movie in Model )
  {
    <tr><td>@movie.Name</td></tr>
  }
</table>

